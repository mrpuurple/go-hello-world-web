{{template "base" .}}

{{define "content"}}
    <div class="content-card">
        <div class="card">
            <div class="card-body">
                <div class="home-hero">
                    <h1>About This Application</h1>
                </div>
                <div class="about-content">
                    <p>Chicken tenderloin venison spare ribs, pastrami bresaola shankle short loin turkey pork loin. Shoulder ham hock pork chop sirloin, beef ribs bacon pancetta drumstick doner. Frankfurter kielbasa prosciutto, cow short ribs ground round chuck shoulder. This came from the template: {{index .StringMap "test"}}</p>
                </div>
                <div class="ip-info">
                    <h3>Connection Information</h3>
                    {{if ne (index .StringMap "remote_ip") ""}}
                        {{if ne (index .StringMap "remote_ipv4") ""}}
                            <p>Your remote IP is <span class="ip-value primary">{{index .StringMap "remote_ipv4"}}</span></p>
                        {{else}}
                            <p>Your remote IP is <span class="ip-value primary">{{index .StringMap "remote_ip"}}</span></p>
                        {{end}}
                    {{else}}
                        <div class="no-ip-message">
                            <p>I don't know your IP address yet. Visit the <a href="/">Home page</a> so I can set it.</p>
                        </div>
                    {{end}}
                </div>
            </div>
        </div>
    </div>
{{end}}